@model IEnumerable<ExamRoom_R33.Models.Choice>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center" style="margin-top:80px;">Question's Options</h2>
            <hr />

            <a class="btn btn-success" href="@Url.Action("Create", "Choice")" id="Add">&nbsp;Add Options </a>
            <a class="btn btn-success" href="@Url.Action("Create", "Question")" id="Add">&nbsp;Add Question </a>
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Question.QuestionType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Label)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Points)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Question.QuestionType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Label)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Points)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

