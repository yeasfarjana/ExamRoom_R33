@model IEnumerable<ExamRoom_R33.Models.Question>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2 class="text-center" style="margin-top:80px;">Question List</h2>
<hr />

<a class="btn btn-success" href="@Url.Action("Create", "Question")" id="Add">&nbsp;Add Question </a>

<table class="table table-striped">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.QuestionMaker.QuestionMakerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question1)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.QuestionMaker.QuestionMakerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question1)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
