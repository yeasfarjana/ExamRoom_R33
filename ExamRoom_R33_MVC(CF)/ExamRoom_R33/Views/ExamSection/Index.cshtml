@model ExamRoom_R33.Models.SessionModel

@{
    ViewBag.Title = "Exam Section";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@if (TempData["message"] != null)
{
    <div class="container" style="margin-top:120px;">
        <div class="row">
            <div class="col-md-10">
                <p>@Html.Raw(TempData["message"])</p>
            </div>
        </div>
    </div>
        }

        <br /><br /><br />

        @using (Html.BeginForm("Instruction", "ExamSection", FormMethod.Post))
        {
            <div class="container">
                <div class="row form-horizontal">
                    <h2 class="text-capitalize">Enter Your Name & Email to Start Exam</h2>
                    <h4 style="color:red;">Please Input Registered Name & Email.</h4>
                    <br /><br />
                    <div class="form-group">
                        <div class="col-md-3">@Html.Label("Select Test")</div>
                        <div class="col-md-5">
                            @Html.DropDownListFor(x => Model.TestId, new SelectList(ViewBag.Tests, "Id", "Name", Model.TestId), "--Select Test--", new { @class = "form-control" })
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-3">@Html.Label("Enter Name")</div>
                        <div class="col-md-5">
                            @Html.TextBoxFor(x => Model.UserName, null, new { @class = "form-control", @placeholder="Registered Name" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">@Html.Label("Enter Email")</div>
                        <div class="col-md-5">
                            @Html.TextBoxFor(x => Model.Email, null, new { @class = "form-control", @placeholder = "Registered Email" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3"></div>
                        <div class="col-md-5">
                            <button type="submit" class="btn btn-primary">Continue</button>
                        </div>
                    </div>

                </div>
            </div>

        }

