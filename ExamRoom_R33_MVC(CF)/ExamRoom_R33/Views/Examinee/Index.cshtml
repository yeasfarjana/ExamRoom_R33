@model IEnumerable<ExamRoom_R33.Models.Examinee>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<h2 class="text-center" style="margin-top:80px;">Examinee List</h2>
<hr />

<a class="btn btn-success" href="@Url.Action("Create", "Examinee")" id="Add">&nbsp;Add Examinee </a>|
<a href="@Url.Action("Report", "Examinee",new {id= "PDF"})">&nbsp;Export PDF&nbsp;</a>|
<a href="@Url.Action("Report", "Examinee",new {id= "Excel"})">&nbsp;Export Excel&nbsp;</a>|
<a href="@Url.Action("Report", "Examinee",new {id= "Word"})">&nbsp;Export Word&nbsp;</a>



<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ExamineeID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id=item.ExamineeID }, new { @class = "btn btn-info" }) 
        </td>
    </tr>
}

</table>
